{
  "cli": {
    "version": ">= 12.0.0"
  },
  "build": {
    "_comment": "IMPORTANTE: Configure as variáveis de ambiente no EAS antes de fazer build de produção. Veja: docs/EAS_ENVIRONMENT_VARIABLES.md",
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug",
        "resourceClass": "default"
      },
      "android": {
        "resourceClass": "default"
      }
    },
    "preview": {
      "android": {
        "buildType": "apk",
        "resourceClass": "default"
      },
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release",
        "resourceClass": "default"
      },
      "distribution": "internal",
      "env": {
        "EXPO_PUBLIC_APP_ENV": "staging"
      }
    },
    "production": {
      "_comment": "Variáveis de ambiente devem ser configuradas via 'eas secret:create' - não via 'env'",
      "env": {
        "EXPO_PUBLIC_APP_ENV": "production",
        "EXPO_PUBLIC_DISABLE_LOGS": "true"
      },
      "android": {
        "buildType": "aab",
        "resourceClass": "large"
      },
      "ios": {
        "simulator": false,
        "buildConfiguration": "Release",
        "autoIncrement": true,
        "resourceClass": "large"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "internal"
      },
      "ios": {
        "appleId": "your-apple-id@email.com",
        "ascAppId": "your-app-store-connect-app-id",
        "appleTeamId": "your-team-id"
      }
    }
  }
}