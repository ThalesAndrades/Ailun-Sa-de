/**
 * TypeScript Configuration - AiLun Saúde Production v2.1.0
 * Configuração otimizada para produção Apple Store
 */

{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // Configurações básicas
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "es6", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    
    // Configurações de módulos
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // JSX e React
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    
    // Configurações de tipos
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    
    // Configurações de checagem
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    
    // Configurações experimentais
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // Paths para aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@contexts/*": ["./contexts/*"],
      "@types/*": ["./types/*"],
      "@assets/*": ["./assets/*"],
      "@config/*": ["./config/*"],
      "~/*": ["./*"]
    },
    
    // Configurações de performance
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "polyfills.ts",
    "polyfill-init.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".expo",
    ".next", 
    "web-build",
    "android",
    "ios",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "coverage",
    "docs",
    "scripts/reset-project.js",
    "**/__tests__/**",
    "**/test/**",
    "**/.expo/**",
    "**/node_modules/**"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compileOnSave": false
}